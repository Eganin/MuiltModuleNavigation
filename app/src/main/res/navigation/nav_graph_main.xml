<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/navigation">

    <fragment
        android:id="@+id/likesFragment"
        android:name="com.best.navigation.screens.LikesFragment"
        android:label="LikesFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.best.navigation.screens.SettingsFragment"
        android:label="SettingsFragment" />
    <navigation
        android:id="@+id/navigation"
        app:startDestination="@id/feedFragment">
        <fragment
            android:id="@+id/detailFragment"
            android:name="com.best.navigation.screens.DetailFragment"
            android:label="DetailFragment" />
        <fragment
            android:id="@+id/feedFragment"
            android:name="com.best.navigation.screens.FeedFragment"
            android:label="FeedFragment">
            <action
                android:id="@+id/action_feedFragment_to_detailFragment"
                app:destination="@id/detailFragment" />
        </fragment>
    </navigation>
</navigation>